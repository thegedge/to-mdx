{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": false,
    "alwaysStrict": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": ["ESNext"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "verbatimModuleSyntax": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "include": ["src/**/*", "bin/**/*"]
}
